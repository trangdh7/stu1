@model List<Webkho_20241021.Models.khotongs>
@{
    ViewData["Title"] = "Kho NV mới";
    Layout = "~/Areas/TruongBPKetoan/Views/Layout/Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/CSS/Action.css" rel="stylesheet" />
    <link href="~/CSS/Kho.css" rel="stylesheet" />
    <link href="~/CSS/style.css" rel="stylesheet" />
    <link href="~/CSS/Table.css" rel="stylesheet" />
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
    <title>Kho NV mới</title>
</head>
<body>
    <nav class="bodykho">
        <div class="menu-kho">
            <ul>
                <li><a href="/TruongBPKetoan/Home/Tongkho" class="tab-link" data-tab="tongkho">Tổng kho</a></li>
                <li><a href="/TruongBPKetoan/Home/CapPhatNvMoi" class="tab-link active" data-tab="capphatnvmoi">Kho nv mới</a></li>
                <li><a href="/TruongBPKetoan/Home/KhoDuAn" class="tab-link" data-tab="khoduan">Kho dự án</a></li>
            </ul>
            <ul>
                <input type="text" id="timkiem" name="Timkiem" placeholder="Tìm kiếm" />
            </ul>
        </div>
        <div class="Tablekhotong-box">
            <table class="tablekhotong">
                <thead>
                    <tr>
                        <td>Mã vật tư</td>
                        <td>Tên vật tư</td>
                        <td>Mã kho</td>
                        <td>Hãng SX</td>
                        <td>Nhà cung cấp</td>
                        <td>Số lượng</td>
                        <td>Đơn vị</td>
                        <td>Ngày nhập kho</td>
                        <td>Ngày bảo hành</td>
                        <td>Thời gian BH</td>
                        <td>Trạng thái</td>
                        <td>Loại cấp phát</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MaSanpham</td>
                            <td>@item.TenSanpham</td>
                            <td>@item.Makho</td>
                            <td>@item.HangSX</td>
                            <td>@item.NhaCC</td>
                            <td>@item.SL</td>
                            <td>@item.DonVi</td>
                            <td>@item.NgayNhapkho?.ToString("dd/MM/yyyy")</td>
                            <td>@item.NgayBaohanh?.ToString("dd/MM/yyyy")</td>
                            <td>@item.ThoiGianBH?.ToString("dd/MM/yyyy")</td>
                            <td>@(item.SL > 0 ? "Tồn Kho" : "Hết Hàng")</td>
                            <td>@item.LoaiCapPhat</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div id="yeucau-action">
            <div class="action">
                <ul class="hanhdong">
                    <li>
                        <a href="/TruongBPKetoan/Home/Themthietbi">Thêm</a>
                    </li>
                </ul>
                <ul class="excel">
                    <li>
                        <a href="/TruongBPKetoan/Home/Import">Import</a>
                    </li>
                    <li>
                        <a href="">Export</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <script src="~/js/khotong.js"></script>
    <style>
        .menu-kho ul {
            display: flex;
            list-style: none;
            margin: 0;
            padding: 0;
        }
        .menu-kho ul li {
            margin-right: 10px;
        }
        .menu-kho ul li a.tab-link {
            padding: 10px 20px;
            text-decoration: none;
            color: #333;
            border-radius: 5px 5px 0 0;
            transition: all 0.3s ease;
            display: block;
            border: 1px solid #dee2e6;
        }
        .menu-kho ul li a.tab-link.active {
            background-color: #007bff;
            color: white;
            font-weight: bold;
            border-color: #007bff;
        }
        .menu-kho ul li a.tab-link:hover {
            color: white;
        }
        .menu-kho ul li a.tab-link.active:hover {
            background-color: #0056b3;
            color: white;
        }
    </style>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const tabLinks = document.querySelectorAll('.tab-link');
            const currentPath = window.location.pathname;
            tabLinks.forEach(link => {
                if (link.href.includes(currentPath)) {
                    link.classList.add('active');
                } else {
                    link.classList.remove('active');
                }
            });
            tabLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    tabLinks.forEach(tab => tab.classList.remove('active'));
                    this.classList.add('active');
                    window.location.href = this.href;
                });
            });
        });
    </script>
</body>
</html>
