@model List<Webkho_20241021.Models.khotongs>
@{
    ViewData["Title"] = "Tongkho";
    Layout = "~/Areas/TruongBPKho/Views/Layout/Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/CSS/Action.css" rel="stylesheet" />
    <link href="~/CSS/Kho.css" rel="stylesheet" />
    <link href="~/CSS/style.css" rel="stylesheet" />
    <link href="~/CSS/Table.css" rel="stylesheet" />
    <link href="~/CSS/Tongkho.css" rel="stylesheet" /> <!-- CSS tách riêng -->
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
    <title>Quản Lý Kho</title>
</head>
<body>
    <div class="warehouse-container">
        <!-- Header -->
        <div class="warehouse-header">
            <div class="header-content">
                <h1 class="header-title">
                    <i class='bx bx-package'></i> Quản Lý Kho
                </h1>
                <p class="header-subtitle">Quản lý tồn kho và cấp phát vật tư</p>
            </div>
        </div>

        <!-- Navigation Tabs -->
        <div class="warehouse-nav">
            <div class="nav-tabs">
                <a href="/TruongBPKho/Home/Tongkho" class="nav-tab active">
                    <i class='bx bx-store'></i> Tổng kho
                </a>
                <a href="/TruongBPKho/Home/CapPhatNvMoi" class="nav-tab">
                    <i class='bx bx-package'></i> Kho nv mới
                </a>
                <a href="/TruongBPKho/Home/KhoDuAn" class="nav-tab">
                    <i class='bx bx-briefcase'></i> Kho dự án
                </a>
            </div>
            <div class="nav-search">
                <i class='bx bx-search'></i>
                <input type="text" id="timkiem" placeholder="Tìm kiếm vật tư..." />
            </div>
        </div>

        <!-- Success Alert -->
        @if (TempData["Success"] != null)
        {
            <div id="success-alert" class="alert alert-success">
                <div class="alert-content">
                    <i class='bx bx-check-circle'></i>
                    <div>
                        <strong>Thành công!</strong>
                        <p>@TempData["Success"]</p>
                    </div>
                </div>
                <button class="alert-close" onclick="this.parentElement.style.display='none';">
                    <i class='bx bx-x'></i>
                </button>
            </div>
        }

        <!-- Action Buttons (moved up here) -->
        <div class="action-section top-action">
            <div class="action-group">
                <h3>Hành động</h3>
                <div class="button-group">
                    <a href="/TruongBPKho/Home/Themthietbi" class="btn btn-primary">
                        <i class='bx bx-plus'></i> Thêm vật tư
                    </a>
                    <a href="/TruongBPKho/Home/Import" class="btn btn-secondary">
                        <i class='bx bx-upload'></i> Import
                    </a>
                    <a href="" class="btn btn-secondary">
                        <i class='bx bx-download'></i> Export
                    </a>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="warehouse-content">
            <div class="table-section">
                <div class="table-header">
                    <h2>Danh sách vật tư dự án</h2>
                </div>
                <div class="table-wrapper">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Mã vật tư</th>
                                <th>Tên vật tư</th>
                                <th>Mã kho</th>
                                <th>Hãng SX</th>
                                <th>Nhà cung cấp</th>
                                <th>Dự án</th>
                                <th>Số lượng</th>
                                <th>Đơn vị</th>
                                <th>Ngày nhập kho</th>
                                <th>Ngày bảo hành</th>
                                <th>Thời gian BH</th>
                                <th>Trạng thái</th>
                                <th>Loại cấp phát</th>
                                <th>In mã</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.MaSanpham</td>
                                        <td>@item.TenSanpham</td>
                                        <td>@item.Makho</td>
                                        <td>@item.HangSX</td>
                                        <td>@item.NhaCC</td>
                                        <td>@item.DuAn</td>
                                        <td>@item.SL</td>
                                        <td>@item.DonVi</td>
                                        <td>@item.NgayNhapkho?.ToString("dd/MM/yyyy")</td>
                                        <td>@item.NgayBaohanh?.ToString("dd/MM/yyyy")</td>
                                        <td>@item.ThoiGianBH?.ToString("dd/MM/yyyy")</td>
                                        <td>@(item.SL > 0 ? "Tồn Kho" : "Hết Hàng")</td>
                                        <td>@item.LoaiCapPhat</td>
                                        <td>
                                            <a href="@Url.Action("InTem", "Home", new { area = "TruongBPKho", makho = item.Makho })"
                                               class="btn-action btn-print"
                                               target="_blank">
                                                <i class='bx bx-printer'></i> In
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="14">Không có dữ liệu.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/khotong.js"></script>
</body>
</html>
