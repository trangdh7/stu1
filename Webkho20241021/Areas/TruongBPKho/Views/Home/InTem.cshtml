@{
    ViewData["Title"] = "In Tem Mã Kho";
    Layout = "~/Areas/TruongBPKho/Views/Layout/Layout.cshtml";
    var code = ViewBag.Makho as string;
    var ten = ViewBag.TenSanpham as string;
    var masp = ViewBag.MaSanpham as string;
    var hang = ViewBag.HangSX as string;
    var ngay = ViewBag.NgayNhapkho as string;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="~/css/TemKho.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>
                <i class="fas fa-barcode" style="color: black;"></i>
                In Tem Mã Kho
            </h1>
            <p>Quản lý và in tem mã kho hàng. </p>
        </div>

        <div class="content-wrapper">
            <!-- Form Section -->
            <div class="form-section">
                <div class="info-box">
                    <i class="fas fa-info-circle"></i>
                    Nhập thông tin sản phẩm để tạo tem mã kho
                </div>

                <form id="labelForm">
                    <div class="form-group">
                        <label for="productName">Tên Sản Phẩm</label>
                        <input type="text" id="productName" value="@ten" placeholder="Nhập tên sản phẩm" readonly>
                    </div>

                    <div class="form-group">
                        <label for="productCode">Mã Sản Phẩm</label>
                        <input type="text" id="productCode" value="@masp" placeholder="Nhập mã sản phẩm" readonly>
                    </div>

                    <div class="form-group">
                        <label for="manufacturer">Hãng Sản Xuất</label>
                        <input type="text" id="manufacturer" value="@hang" placeholder="Nhập hãng sản xuất" readonly>
                    </div>

                    <div class="form-group">
                        <label for="importDate">Ngày Nhập Kho</label>
                        <input type="text" id="importDate" value="@ngay" placeholder="Nhập ngày nhập kho" readonly>
                    </div>

                    <div class="form-group">
                        <label for="warehouseCode">Mã Kho</label>
                        <input type="text" id="warehouseCode" value="@code" placeholder="Nhập mã kho" readonly>
                    </div>
                </form>
            </div>

            <!-- Preview Section -->
            <div class="preview-section">
                <div class="label-preview">
                    <h3 id="previewName">@ten</h3>

                    <div class="info-row">
                        <span class="info-label">Mã SP:</span> <span id="previewCode">@masp</span>
                    </div>

                    <div class="info-row">
                        <span class="info-label">Hãng SX:</span> <span id="previewManufacturer">@hang</span>
                    </div>

                    <div class="info-row">
                        <span class="info-label">Ngày nhập:</span> <span id="previewDate">@ngay</span>
                    </div>

                    <div class="barcode-container">
                        <svg id="barcode"></svg>
                    </div>

                    <div class="qrcode-container">
                        <div id="qrcode"></div>
                    </div>

                    <div class="info-row" style="font-weight: 600; color: #1e293b; margin-top: 10px;">
                        <span id="previewWarehouseCode">@code</span>
                    </div>
                </div>

                <!-- Button Group -->
                <div class="button-group">
                    <button class="btn btn-primary" onclick="printLabel()">
                        <i class="fas fa-print"></i> In Tem
                    </button>
                    <button class="btn btn-secondary" onclick="previewLabel()">
                        <i class="fas fa-eye" style="color: black;"></i> Xem Trước
                    </button>
                    <button class="btn btn-danger" onclick="goBack()">
                        <i class="fas fa-arrow-left"></i> Quay Lại
                    </button>
                </div>

            </div>
        </div>
    </div>

    <!-- Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/jsbarcode@3.11.5/dist/JsBarcode.all.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>

    <script>
        function initializeLabel() {
            const warehouseCode = document.getElementById('warehouseCode').value || '@code';

            // Generate Barcode
            JsBarcode("#barcode", warehouseCode, {
                format: "CODE128",
                width: 2,
                height: 50,
                displayValue: true,
                fontSize: 12
            });

            // Generate QR Code
            document.getElementById('qrcode').innerHTML = '';
            new QRCode(document.getElementById('qrcode'), {
                text: warehouseCode,
                width: 100,
                height: 100,
                colorDark: "#1e293b",
                colorLight: "#ffffff"
            });
        }

        function printLabel() {
            window.print();
        }

        function previewLabel() {
            const labelContent = document.querySelector('.label-preview').outerHTML;
            const printWindow = window.open('', '', 'height=600,width=400');
            printWindow.document.write('<html><head><title>In Tem</title>');
            printWindow.document.write('<style>');
            printWindow.document.write('body { font-family: Arial; text-align: center; }');
            printWindow.document.write('.label-preview { border: 1px dashed #ccc; padding: 20px; width: 280px; margin: 0 auto; }');
            printWindow.document.write('</style></head><body>');
            printWindow.document.write(labelContent);
            printWindow.document.write('</body></html>');
            printWindow.document.close();
            printWindow.print();
        }

        // Nút quay lại trang trước
        function goBack() {
            window.history.back();
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            initializeLabel();
        });
    </script>
</body>
</html>
